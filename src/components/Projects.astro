---
import { useTranslations } from '../i18n/utils';
import { projects } from '../data/projects';

export interface Props {
  lang: 'pt' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Get featured projects sorted by date
const featuredProjects = projects
  .filter(p => p.featured)
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<section id="projects" class="py-24 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t('projects.title')}
      </h2>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {lang === 'pt'
          ? 'Projetos open source, pesquisas e sistemas que constru√≠'
          : 'Open source projects, research and systems I have built'}
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredProjects.map((project, i) => (
        <a
          href={project.live || project.github}
          target="_blank"
          rel="noopener noreferrer"
          class={`group relative overflow-hidden rounded-2xl p-6 transition-all duration-300 hover:scale-[1.02] hover:-translate-y-1 ${
            i === 0
              ? 'md:col-span-2 lg:col-span-2 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/50 dark:to-purple-900/50 border border-blue-300 dark:border-blue-500/30 hover:border-blue-400 dark:hover:border-blue-400/50'
              : 'bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/50 hover:border-gray-300 dark:hover:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800/80'
          }`}
        >
          <!-- Gradient overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>

          <div class="relative">
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.slice(0, 3).map(tag => (
                <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                  i === 0
                    ? 'bg-blue-200 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300'
                    : 'bg-gray-200 dark:bg-gray-700/50 text-gray-600 dark:text-gray-400'
                }`}>
                  {tag}
                </span>
              ))}
              {project.tags.length > 3 && (
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-200 dark:bg-gray-700/50 text-gray-500">
                  +{project.tags.length - 3}
                </span>
              )}
            </div>

            <!-- Title -->
            <h3 class={`font-semibold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors ${
              i === 0 ? 'text-xl text-gray-900 dark:text-white' : 'text-lg text-gray-900 dark:text-white'
            }`}>
              {project.title[lang]}
            </h3>

            <!-- Description -->
            <p class={`text-gray-600 dark:text-gray-400 leading-relaxed mb-4 ${i === 0 ? 'line-clamp-3' : 'line-clamp-2'}`}>
              {project.description[lang]}
            </p>

            <!-- Links -->
            <div class="flex items-center gap-4 text-sm">
              {project.github && (
                <span class="flex items-center gap-1 text-gray-500 group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  GitHub
                </span>
              )}
              {project.live && (
                <span class="flex items-center gap-1 text-blue-600 dark:text-blue-400 group-hover:text-blue-500 dark:group-hover:text-blue-300 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  Live
                </span>
              )}
              <span class="ml-auto flex items-center text-gray-500 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {lang === 'pt' ? 'Ver mais' : 'View'}
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
