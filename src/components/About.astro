---
import { useTranslations } from '../i18n/utils';
import { about } from '../data/about';

export interface Props {
  lang: 'pt' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const aboutContent = about[lang];
---

<section id="about" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {t('about.title')}
        </h2>
        <div class="w-20 h-1 bg-blue-600 mx-auto mb-6"></div>
      </div>
      
      <!-- Main Content Grid -->
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Left Column - Main Description -->
        <div class="space-y-8">
          <!-- Title -->
          <div>
            <h3 class="text-2xl font-semibold text-blue-600 dark:text-blue-400 mb-4">
              {aboutContent.title}
            </h3>
            <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
              {aboutContent.description}
            </p>
          </div>
          
          <!-- Philosophy -->
          <div class="bg-blue-50 dark:bg-blue-900/20 p-6 rounded-xl border-l-4 border-blue-600">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
              {aboutContent.philosophy.title}
            </h4>
            <p class="text-gray-700 dark:text-gray-300 italic">
              "{aboutContent.philosophy.content}"
            </p>
          </div>
        </div>
        
        <!-- Right Column - Expertise & Experience -->
        <div class="space-y-8">
          <!-- Expertise -->
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
              {aboutContent.expertise.title}
            </h4>
            <ul class="space-y-3">
              {aboutContent.expertise.items.map(item => (
                <li class="text-gray-700 dark:text-gray-300 flex items-start">
                  <svg class="w-4 h-4 mr-2 mt-1 text-green-600 dark:text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-sm">{item}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Experience -->
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
              </svg>
              {aboutContent.experience.title}
            </h4>
            <div class="text-gray-700 dark:text-gray-300 text-sm space-y-2">
              {aboutContent.experience.content.split('\n').map(line => line.trim() && (
                <p>{line}</p>
              ))}
            </div>
          </div>
        </div>
      </div>
      
      <!-- Stats/Highlights -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="p-6">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">5+</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            {lang === 'pt' ? 'Anos de Experiência' : 'Years Experience'}
          </div>
        </div>
        
        <div class="p-6">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">20+</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            {lang === 'pt' ? 'Projetos Concluídos' : 'Projects Completed'}
          </div>
        </div>
        
        <div class="p-6">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">15+</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            {lang === 'pt' ? 'Tecnologias' : 'Technologies'}
          </div>
        </div>
        
        <div class="p-6">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">4+</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            {lang === 'pt' ? 'Certificações' : 'Certifications'}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>