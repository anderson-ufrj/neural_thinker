---
import { projects } from '../data/projects';
import { blogPosts } from '../data/blog';

export interface Props {
  lang: 'pt' | 'en';
}

const { lang } = Astro.props;

// Get all unique tags from projects and blog posts
const projectTags = projects.flatMap(p => p.tags);
const blogTags = blogPosts.flatMap(p => p.tags);
const allTags = [...new Set([...projectTags, ...blogTags])];

// Categorize tags
const techTags = ['Python', 'TypeScript', 'Next.js', 'FastAPI', 'React', 'Tailwind', 'PostgreSQL', 'Supabase'];
const aiTags = ['AI/ML', 'LangChain', 'DSPy', 'LLM', 'Machine Learning', 'Deep Learning', 'Multi-Agent', 'RAG', 'Maritaca AI'];
---

<section id="tags" class="py-24 bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        Tags
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        {lang === 'pt'
          ? 'Tecnologias e Ã¡reas de expertise'
          : 'Technologies and areas of expertise'}
      </p>
    </div>

    <!-- Tags Cloud -->
    <div class="flex flex-wrap justify-center items-baseline gap-x-6 gap-y-3">
      {allTags.map((tag, i) => {
        const isAI = aiTags.includes(tag);
        const isTech = techTags.includes(tag);
        return (
          <span
            class={`transition-all duration-300 cursor-default hover:scale-110 ${
              isAI
                ? 'text-2xl sm:text-3xl font-bold text-purple-400 hover:text-purple-300'
                : isTech
                  ? 'text-xl sm:text-2xl font-semibold text-blue-400 hover:text-blue-300'
                  : 'text-base sm:text-lg font-medium text-gray-500 hover:text-gray-400'
            }`}
          >
            {tag}
          </span>
        );
      })}
    </div>
  </div>
</section>
