---
import { useTranslations } from '../i18n/utils';
import { certifications, memberships, type Membership } from '../data/certifications';

export interface Props {
  lang: 'pt' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Featured certifications for timeline (latest 8)
const featuredCerts = certifications.slice(0, 8);

// Format date
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString(lang === 'pt' ? 'pt-BR' : 'en-US', {
    year: 'numeric',
    month: 'short'
  });
};

// Format year only
const formatYear = (dateString: string) => {
  const date = new Date(dateString);
  return date.getFullYear();
};
---

<section id="certifications" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t('certifications.title')}
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        {lang === 'pt' 
          ? 'Formação contínua em tecnologias emergentes, com foco em IA, Machine Learning e arquitetura de sistemas. Certificações de universidades e empresas líderes mundiais.'
          : 'Continuous education in emerging technologies, focusing on AI, Machine Learning and systems architecture. Certifications from leading global universities and companies.'
        }
      </p>
      <div class="w-20 h-1 bg-blue-600 mx-auto mt-6"></div>
    </div>
    
    <!-- Horizontal Timeline -->
    <div class="mb-20">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        {lang === 'pt' ? 'Certificações em Destaque' : 'Featured Certifications'}
      </h3>
      
      <div class="relative overflow-x-auto pb-6">
        <div class="flex space-x-8 min-w-max px-4">
          {featuredCerts.map((cert, index) => (
            <div class="flex flex-col items-center min-w-[280px]">
              <!-- Timeline dot and line -->
              <div class="relative">
                {index !== 0 && (
                  <div class="absolute right-full top-3 w-8 h-0.5 bg-blue-300 dark:bg-blue-700"></div>
                )}
                <div class="w-6 h-6 bg-blue-600 rounded-full border-4 border-white dark:border-gray-800 shadow-lg"></div>
                {index !== featuredCerts.length - 1 && (
                  <div class="absolute left-full top-3 w-8 h-0.5 bg-blue-300 dark:bg-blue-700"></div>
                )}
              </div>
              
              <!-- Certification card -->
              <div class="mt-6 bg-white dark:bg-gray-900 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 hover:transform hover:scale-105">
                <!-- Date badge -->
                <div class="inline-flex items-center px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 text-sm font-medium rounded-full mb-4">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  {formatDate(cert.date)}
                </div>
                
                <!-- Title -->
                <h4 class="font-bold text-gray-900 dark:text-white mb-2 text-sm leading-tight">
                  {cert.title[lang]}
                </h4>
                
                <!-- Issuer -->
                <p class="text-gray-600 dark:text-gray-400 text-sm mb-3">
                  {cert.issuer}
                </p>
                
                <!-- Skills -->
                {cert.skills && cert.skills.length > 0 && (
                  <div class="flex flex-wrap gap-1 mb-4">
                    {cert.skills.slice(0, 3).map((skill) => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs rounded-md">
                        {skill}
                      </span>
                    ))}
                    {cert.skills.length > 3 && (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 text-xs rounded-md">
                        +{cert.skills.length - 3}
                      </span>
                    )}
                  </div>
                )}
                
                <!-- Credential ID -->
                {cert.credentialId && (
                  <p class="text-xs text-gray-400 dark:text-gray-500 font-mono">
                    ID: {cert.credentialId}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="text-center mt-4">
        <p class="text-sm text-gray-500 dark:text-gray-400 flex items-center justify-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l4-4m0 0l4 4m-4-4v12"></path>
          </svg>
          {lang === 'pt' ? 'Deslize para ver mais certificações' : 'Scroll to view more certifications'}
        </p>
      </div>
    </div>
    
    <!-- Professional Memberships -->
    <div class="mb-16">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        {lang === 'pt' ? 'Memberships Profissionais' : 'Professional Memberships'}
      </h3>
      
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {memberships.map((membership) => (
          <div class="bg-white dark:bg-gray-900 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600">
            <!-- Organization badge -->
            <div class="flex items-center justify-between mb-4">
              <div class="inline-flex items-center px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200 text-xs font-medium rounded-full">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                {lang === 'pt' ? 'Ativo' : 'Active'}
              </div>
              <span class="text-sm text-gray-500 dark:text-gray-400">
                {formatYear(membership.date)}
                {membership.expiryDate && ` - ${formatYear(membership.expiryDate)}`}
              </span>
            </div>
            
            <!-- Title -->
            <h4 class="font-bold text-gray-900 dark:text-white mb-2 text-lg leading-tight">
              {membership.title[lang]}
            </h4>
            
            <!-- Organization -->
            <p class="text-blue-600 dark:text-blue-400 font-medium mb-3 text-sm">
              {membership.organization}
            </p>
            
            <!-- Description -->
            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-4">
              {membership.description[lang]}
            </p>
            
            <!-- Credential ID -->
            {membership.credentialId && (
              <p class="text-xs text-gray-400 dark:text-gray-500 font-mono border-t border-gray-100 dark:border-gray-700 pt-3">
                ID: {membership.credentialId}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>
    
    <!-- Stats and Total -->
    <div class="text-center">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
            {certifications.length}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {lang === 'pt' ? 'Certificações' : 'Certifications'}
          </div>
        </div>
        
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">
            {memberships.length}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {lang === 'pt' ? 'Memberships' : 'Memberships'}
          </div>
        </div>
        
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">
            15+
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {lang === 'pt' ? 'Universidades' : 'Universities'}
          </div>
        </div>
        
        <div class="bg-white dark:bg-gray-900 rounded-xl p-4 shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="text-2xl font-bold text-orange-600 dark:text-orange-400">
            2025
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {lang === 'pt' ? 'Mais Recente' : 'Latest'}
          </div>
        </div>
      </div>
      
      <!-- Call to action -->
      <div class="mt-8">
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          {lang === 'pt' 
            ? 'Compromisso contínuo com aprendizado e excelência técnica em tecnologias emergentes.'
            : 'Continuous commitment to learning and technical excellence in emerging technologies.'
          }
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  /* Custom scrollbar for horizontal timeline */
  .overflow-x-auto::-webkit-scrollbar {
    height: 6px;
  }
  
  .overflow-x-auto::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 3px;
  }
  
  .dark .overflow-x-auto::-webkit-scrollbar-track {
    background: #374151;
  }
  
  .overflow-x-auto::-webkit-scrollbar-thumb {
    background: #3b82f6;
    border-radius: 3px;
  }
  
  .overflow-x-auto::-webkit-scrollbar-thumb:hover {
    background: #2563eb;
  }
</style>