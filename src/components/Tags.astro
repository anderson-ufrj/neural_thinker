---
import { projects } from '../data/projects';
import { blogPosts } from '../data/blog';

export interface Props {
  lang: 'pt' | 'en';
}

const { lang } = Astro.props;

// Get all unique tags from projects and blog posts
const projectTags = projects.flatMap(p => p.tags);
const blogTags = blogPosts.flatMap(p => p.tags);
const allTags = [...new Set([...projectTags, ...blogTags])];
---

<section id="tags" class="py-24 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
    <!-- Section Header -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12">
        Tags
      </h2>
      
      <!-- Tags Grid -->
      <div class="flex flex-wrap gap-3">
        {allTags.map(tag => (
          <span class="px-4 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors cursor-pointer">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>