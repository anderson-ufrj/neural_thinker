---
import { useTranslations } from '../i18n/utils';
import site from '../data/site.json';

export interface Props {
  lang: 'pt' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
