        <div class="space-y-4">
          <h4 class="text-lg font-semibold text-white">
            {lang === 'pt' ? 'Links Rápidos' : 'Quick Links'}
          </h4>
          <ul class="space-y-2">
            <li>
              <a href="#home" class="text-gray-300 hover:text-blue-400 transition-colors text-sm">
                {t('nav.home')}
              </a>
            </li>
            <li>
              <a href="#projects" class="text-gray-300 hover:text-blue-400 transition-colors text-sm">
                {t('nav.projects')}
              </a>
            </li>
            <li>
              <a href="#about" class="text-gray-300 hover:text-blue-400 transition-colors text-sm">
                {t('nav.about')}
              </a>
            </li>
            <li>
              <a href="#blog" class="text-gray-300 hover:text-blue-400 transition-colors text-sm">
                {t('nav.blog')}
              </a>
            </li>
            <li>
              <a href="#certifications" class="text-gray-300 hover:text-blue-400 transition-colors text-sm">
                {t('nav.certifications')}
              </a>
            </li>
          </ul>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-4">
          <h4 class="text-lg font-semibold text-white">
            {lang === 'pt' ? 'Entre em Contato' : 'Get in Touch'}
          </h4>
          <div class="space-y-3">
            <a 
              href={`mailto:${site.email}`}
              class="flex items-center text-gray-300 hover:text-blue-400 transition-colors text-sm group"
            >
              <svg class="w-5 h-5 mr-3 text-blue-400 group-hover:text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="font-medium">{site.email}</span>
            </a>
            <div class="text-gray-300 text-sm flex items-center">
              <svg class="w-5 h-5 mr-3 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
